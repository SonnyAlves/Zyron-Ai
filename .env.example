# Zyron AI - Environment Variables Template
# Copy this to .env and fill in your values

# Environment
ENVIRONMENT=development

# Backend
BACKEND_PORT=8000
BACKEND_LOG_LEVEL=info

# Frontend
FRONTEND_PORT=5173

# Database (for staging/prod with Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zyron_dev
DB_USER=zyron
DB_PASSWORD=dev_password_change_in_prod

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Visual Brain
VISUAL_BRAIN_PORT=8001
GPU_ENABLED=false
MODEL_CACHE=./models

# Application settings
DEBUG=true
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
