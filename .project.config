# Zyron-Ai Project Configuration
# This file stores project-wide settings for development

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=127.0.0.1
BACKEND_RELOAD=true
BACKEND_LOG_LEVEL=info

# Frontend Configuration
FRONTEND_PORT=5173
FRONTEND_HOST=localhost

# Development Settings
ENV=development
DEBUG=true

# Logging
LOG_DIR=logs
LOG_LEVEL=INFO

# Server Timeouts (in seconds)
GRACEFUL_SHUTDOWN_TIMEOUT=10
HEALTH_CHECK_TIMEOUT=5

# Ports (for make status command)
BACKEND_HEALTH_URL=http://127.0.0.1:8000/health
FRONTEND_HEALTH_URL=http://localhost:5173

# Project Paths
VENV_PATH=backend/.venv
NODE_MODULES_PATH=frontend/node_modules
